<%- include("_header") -%>

<div class="bd-cheatsheet container-fluid bg-body">
	<form action="/edit/<%= actu.actuId %>" method="post">
		<div class="form-horizontal">
			 <div class="mb-3">
				<label for="title" class="form-label">Titre</label>
				<input type="title" class="form-control" name="title" value="<%= actu.title %>">
			</div>
			<div class="form-floating">
				<div class="mb-3">
					<label for="Contenu" class="form-label" >Contenu</label>
					<textarea class="form-control" name="content" rows="30" ><%= actu.content %></textarea>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="Thumbnail">Image</label>
				<input type="file" class="form-control" name="image">
			</div>
			<div class="col-sm-10">
				<input type="submit" value="Save" class="btn btn-default btn-success" />
			</div>
		</div>
	</form>
</div>

<%- include("_footer") -%>