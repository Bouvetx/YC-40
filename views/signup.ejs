<%- include("_header") -%>

<div class="text-center signin">
	<main class="form-signin text-center w-100 m-auto bg-light rounded">
		<form action="/signup" method="post">
			<h1 class="h3 mb-3 fw-normal">Bienvenue à bord</h1>
			<div class="container bg-light p-3"></div>
			<div class="form-floating">		
				<input type="text" class="form-control" placeholder="Nom de l'utilisateur" name="nickname">
				<label for="floatingInput">Nom de l'utilisateur</label>
			</div>
			<div class="form-floating">
				<input type="email" class="form-control" placeholder="Adresse mail" name="email">
				<label for="floatingInput">Adresse mail</label>
			</div>
			<div class="form-floating">
				<input type="password" class="form-control" placeholder="Mot de passe" name="password">
				<label for="floatingPassword">Mot de passe</label>
			</div>
			<div class="container bg-light p-3"></div>
			<button class="w-100 btn btn-lg btn-primary" type="submit">Créer un compte</button>
		</form>
	</main>
</div>

<%- include("_footer") -%>